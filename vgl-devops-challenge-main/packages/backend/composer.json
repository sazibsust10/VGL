{
  "name": "vgl-devops-challenge/backend",
  "description": "Legacy-style PHP backend (Doctrine + Swoole + vanilla) for DevOps challenge",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "doctrine/orm": "^2.15",
    "doctrine/dbal": "^3.7",
    "vlucas/phpdotenv": "^5.6",
    "symfony/cache": "^6.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php bin/server.php",
    "seed": "php bin/seed.php",
    "test": "phpunit --colors=always",
    "lint": "vendor/bin/phpcs --standard=phpcs.xml src tests",
    "lint:fix": "vendor/bin/phpcbf --standard=phpcs.xml src tests",
    "stan": "vendor/bin/phpstan analyse -c phpstan.neon"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.9",
    "phpstan/phpstan": "^1.11"
  }
}
